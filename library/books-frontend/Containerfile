FROM ubi8/nodejs-14

ENV REACT_APP_KEYCLOAK_URL="https://keycloak-rhsso.apps.restricted-05.bttech.ocp/auth"
ENV REACT_APP_KEYCLOAK_REALM="ad240"
ENV REACT_APP_ENDPOINT="/books"

# Cache dependencies
COPY package.json .
COPY package-lock.json .
RUN npm ci --production

# Cache public files
COPY public ./public

COPY src ./src

EXPOSE 3000

CMD npm start
